<?xml version="1.0"?>
<AccessRequest>
   <AccessLicenseNumber><%= @access_license_number %></AccessLicenseNumber>
   <UserId><%= @user_id %></UserId>
   <Password><%= @password %></Password>
</AccessRequest>
<?xml version="1.0"?>
<TimeInTransitRequest>
   <Request>
      <TransactionReference>
         <CustomerContext></CustomerContext>
         <XpciVersion>1.001</XpciVersion>
      </TransactionReference>
      <RequestAction>TimeInTransit</RequestAction>
   </Request>
   <TransitFrom>
      <AddressArtifactFormat>
         <% if !international? %>        
           <PostcodePrimaryLow><%= @postcode_from %></PostcodePrimaryLow>
           <CountryCode><%= @country_from %></CountryCode>
         <% end %>
         
         <% if international? %>
           <PoliticalDivision2>Mexico DF</PoliticalDivision2>
           <PoliticalDivision1>DF</PoliticalDivision1>
           <CountryCode><%= @country_from %></CountryCode>
           <PostcodePrimaryLow><%= @postcode_from %></PostcodePrimaryLow>
           <PostcodePrimaryHigh><%= @postcode_from %></PostcodePrimaryHigh>
         <% end %>         
      </AddressArtifactFormat>
   </TransitFrom>
   <TransitTo>
      <AddressArtifactFormat>
         <% if !international? %>
           <PostcodePrimaryLow><%= @postcode_to %></PostcodePrimaryLow>
           <CountryCode><%= @country_to %></CountryCode>
         <% end %>
                  
         <% if international? %>
           <PoliticalDivision2>Mexico DF</PoliticalDivision2>
           <PoliticalDivision1>DF</PoliticalDivision1>
           <CountryCode><%= @country_to %></CountryCode>
           <PostcodePrimaryLow><%= @postcode_to %></PostcodePrimaryLow>
           <PostcodePrimaryHigh><%= @postcode_to %></PostcodePrimaryHigh>
        <% end %>         
      </AddressArtifactFormat>
   </TransitTo>
   <PickupDate><%= @pickup_date %></PickupDate>
   <MaximumListSize>5</MaximumListSize>
   <ShipmentWeight>
      <UnitOfMeasurement>
         <Code>KGS</Code>
         <Description>Kilograms</Description>
      </UnitOfMeasurement>
      <Weight><%= @weight %></Weight>
   </ShipmentWeight>
   <% if international? %>
     <InvoiceLineTotal>
       <CurrencyCode>USD</CurrencyCode>
       <MonetaryValue>1.0</MonetaryValue>
     </InvoiceLineTotal>   
  <% end %>
</TimeInTransitRequest>