<?xml version="1.0" encoding="UTF-8"?>
<req:BookPickupRequest xmlns:req="http://www.dhl.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dhl.com
 book-pickup-req.xsd">
    <Request>
        <ServiceHeader>
          <SiteID><%= @site_id %></SiteID>
          <Password><%= @password %></Password>
        </ServiceHeader>
    </Request>
    <Requestor>
        <AccountType>D</AccountType>
        <AccountNumber><%= @account_number %></AccountNumber>
    </Requestor>
    <Place>
        <LocationType>B</LocationType>
        <CompanyName><%= @company %></CompanyName>
        <Address1><%= @address %></Address1>
        <Address2></Address2>        
        <PackageLocation><%= @package_location %></PackageLocation>
        <City><%= @city %></City>
        <CountryCode><%= @country %></CountryCode>
        <PostalCode><%= @postal_code %></PostalCode>
    </Place>
    <Pickup>
        <PickupDate><%= @pickup_date %></PickupDate>
        <ReadyByTime><%= @ready_by_time %></ReadyByTime>
        <CloseTime><%= @close_time %></CloseTime>
    </Pickup>
    <PickupContact>
        <PersonName><%= @contact_name %></PersonName>
        <Phone><%= @contact_phone %></Phone>
    </PickupContact>
    <% if @shipment_details %>    
      <ShipmentDetails>
          <AccountType>D</AccountType>
          <AccountNumber><%= @account_number %></AccountNumber>      
          <BillToAccountNumber><%= @account_number %></BillToAccountNumber>             
          <AWBNumber></AWBNumber>
          <% if @weight %>
            <Weight><%= @weight %></Weight>
            <WeightUnit>K</WeightUnit>
          <% end %>
          <DoorTo>DD</DoorTo>
          <DimensionUnit>C</DimensionUnit>
      </ShipmentDetails> 
    <% end %>      
</req:BookPickupRequest>